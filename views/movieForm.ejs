<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/movieForm.css" />
    <title>Add New Item</title>
    <link rel="stylesheet" href="/styles/add-item.css" />
  </head>
  <body>
    <header>
      <h3>Dashboard</h3>
    </header>

    <main class="main">
      <div class="section-header">
        <h3>Add New Item</h3>
        <button type="submit" form="item-form">Save</button>
      </div>

      <form id="item-form" class="item-form" method="POST" action="/new-movie">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" id="title" name="title" required />
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          <textarea id="description" name="description" rows="4"></textarea>
        </div>

        <div class="form-group">
          <label for="category">Category</label>
          <select id="category" name="category" required>
            <option value="">-- Select a category --</option>
            <% categories.forEach((category) => { %>
            <option value="<%= category.id %>"><%= category.name %></option>
            <% }); %>
          </select>
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          <input type="text" id="image" name="image" required/>
        </div>

        <div class="form-group">
          <label for="image">date release</label>
          <input type="date" id="reldate" name="reldate" required/>
        </div>
      </form>
    </main>
  </body>
</html>
